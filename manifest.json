{
  "name": "Cursed",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "You've been cursed!",
  "homepage_url": "https://github.com/TeffenEllis/cursed",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "options_page": "app/options_custom/index.html",
  "permissions": [
    "storage"
  ],
  "content_scripts": [{
      "all_frames": true,
      "js": [
        "dist/inject.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*"
      ],
      "run_at": "document_end"
   }]
}
